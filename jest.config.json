{
  "testEnvironment": "node",
  "testTimeout": 60000,
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/app.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
